restraint = "distance( (45) (49) )"
\end_layout

\begin_layout LyX-Code
= "angle (:21@C5' :21@C4' 108)"
\end_layout

\begin_layout LyX-Code
= "torsion[-1,-1,-1, com(67, 68, 69)]"
\end_layout

\begin_layout LyX-Code
= "angle( -1, plane(81, 85, 87, 90) )"
\end_layout

