#!/bin/csh -f

set sander = "../../bin/msander"
if( $?TESTsander ) then
   set sander = $TESTsander
endif

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
endif

set prmtop = "prmtop"
if( $#argv > 0 ) then
   set prmtop = "$1"
endif

set output = mdout.dhfr

cat > gbin <<EOF
 short md, nve ensemble
 &cntrl
   ntx=7, irest=1,
   ntc=2, ntf=2, tol=0.0000001, 
   nstlim=20, ischeme=1, ithermostat=0,
   ntpr=1, ntwr=10000, 
   dt=0.001, vlimit=10.0, ig=71277,
 /
 &ewald
   nfft1 = 72, nfft2 = 60, nfft3 = 54,
 /
EOF

$DO_PARALLEL $sander -O -p $prmtop -i gbin -c md12.x -o $output < /dev/null || goto error

../dacdif $output.save $output
#/bin/rm -f gbin restrt mdinfo
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
