#!/bin/sh

sander="../../bin/msander"
export OMP_NUM_THREADS=8

if [ ! -z "$DO_PARALLEL" ]; then
   sander=$sander.MPI
fi

output=mdout.dhfr

cat > gbin <<EOF
 short md, nve ensemble
 &cntrl
   ntx=7, irest=1,
   ntc=2, ntf=2, tol=0.0000001, 
   nstlim=20, ithermostat=0,
   ntpr=1, ntwr=10000, 
   dt=0.001, vlimit=10.0, ig=71277,
 /
 &ewald
   nfft1 = 72, nfft2 = 60, nfft3 = 54,
 /
EOF

$DO_PARALLEL $sander -O -i gbin -c md12.x -o $output \
    < /dev/null || { echo "  $0:  Program error"; exit 1; }

cp $output $output.8.omp
../dacdif $output.save $output
/bin/rm -f gbin restrt mdinfo
exit 0 

