#!/bin/sh

sander="../../bin/msander"

if [ ! -z "$DO_PARALLEL" ]; then
   sander=$sander.MPI
fi

cat > gbin <<EOF
 short minimization
 &cntrl
   ntx=5, irest=1,
   ntc=1, ntf=1, tol=0.0000001, 
   imin=0, nstlim=1,
   ntpr=1, ntwr=10000, 
   cut=12.0, ips=2,
 /
 &ewald
    skinnb=0.0, vdwmeth=0,
 /
EOF

output=mdout.dhfr_ips

$DO_PARALLEL $sander -O -i gbin -c md12.x -o $output < /dev/null\
    || (echo "  ${0}:  Program error"; exit 1)

../dacdif $output.save $output
/bin/rm -f gbin restrt mdinfo dummy
exit 0

