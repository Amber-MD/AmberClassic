#!/bin/csh -f
#TEST-PROGRAM sander
#TEST-DESCRIP Tests potential gradients vs. analytic forces via 3D-RISM minimization.
#TEST-PURPOSE regression, basic
#TEST-STATE   undocumented

#TODO: NOT YET OPTIMIZED. Attempts to balance accuracy and speed.

if( ! $?TESTsander ) set TESTsander = "${AMBERHOME}/bin/sander"

if ! { ../../checkrismunsupported.sh $TESTsander } exit 0

if( ! $?DO_PARALLEL ) then
        setenv DO_PARALLEL " "
else
        set numprocs=`echo $DO_PARALLEL | awk -f ../../../numprocs.awk `
        if ( $numprocs > 2 ) then
            echo " DO_PARALLEL set to $DO_PARALLEL"
            goto toomany
        else if ( $?MP_PROCS)then
            if ($MP_PROCS > 3)then
#               --- For IBM AIX ---
                echo "    MP_PROCS set to "$MP_PROCS
                goto toomany
            endif
        endif
endif

cat > mdin <<EOF
Alanine dipeptide run
 &cntrl
    ntx=1, ntpr=1, ntwx=0, ntwr=0
    ioutfm=1
    imin=0
    nstlim=0
    ig=314159
    ntb=0
    irism=1
    cut=999
 /
 &rism
    closure='kh'
    buffer=-1, ng3=64,64,64, solvbox=32d0,32d0,32d0
    ! buffer=-1, ng3=128,128,128, solvbox=64d0,64d0,64d0
    ! buffer=-1, ng3=128,128,128, solvbox=32d0,32d0,32d0
    ! buffer=-1, ng3=256,256,256, solvbox=64d0,64d0,64d0
    verbose=1
    progress=0
    npropagate=5
    mdiis_del=0.7, mdiis_nvec=5, tolerance=1e-10
    apply_rism_force=1
    zerofrc=1
    treeDCF=.false.
    treeTCF=.false.
    treeCoulomb=.false.
    asympKSpaceTolerance = 0
    ljTolerance = 0
 /
 &debugf
  ! Enable debugging.
  do_debugf=1
  ! Atom spatial offset. Negative log of delta used in numerical
  ! differentiating; e.g. 4 means delta is 10^-4 Angstroms. Default is
  ! 5.
  ! neglgdel=6
  ! atom numbers to test
  !  atomn=1,6,11,16,21
  ! Alternatively pick a number of random atoms to test. This will
  !  always pick the same atoms unless you change the seed
  nranatm=5
  ! Check atomic and molecular virials.
  chkvir=0
  ! Dump energies, forces, and virials to forcedump.dat.
  dumpfrc=0
  ! Compare energies, forces and virials to forcedump.dat.
  rmsfrc=0
  ! Zero out charge or van der Waals parameters.
  zerochg=1
  zerovdw=1
  ! Real-space (direct) non-bonded interactions (van der Waals, electrostatic).
  do_dir=0
  ! k-space (reciprocal) portion of Ewald sum.
  do_rec=0
  ! Adjust Ewald sum to remove the Gaussian charge contribution from
  ! neighboring bonded atoms and other atoms that should not have
  ! non-bonded pair forces.
  do_adj=0
  ! Remove from Ewald sum the interaction of point charge with its own
  ! Gaussian.
  do_self=0
  ! Bond forces.
  do_bond=0
  ! ?? Seems to no longer be present, but mentioned in manual.
  ! do_cbond=0
  ! Angle forces.
  do_angle=0
  ! Dihedral forces.
  do_ephi=0
  ! ?? Seems to no longer be present, but mentioned in manual.
  ! do_xconst=0
  ! cap force (whatever that is).
  do_cap=0
  ! Apply harmonic position constraints.
  doxconst=0
  ! 1-4 interactions (???).
  do_14=0
  ! Targeted MD simulation with restraints based on RMSD.
  do_tgt=0
  ! PBSA related routines.
  do_pbdir=0
  do_pbnp=0
  do_pbfd=0
 /
EOF

$DO_PARALLEL $TESTsander -O -i mdin -o ala.min.debug.out \
   -p ../../ala/ala.parm7 -c ../../ala/ala.min.nc \
   -xvv ../../../../AmberTools/test/rism1d/spc-kh/spc.xvv.save \
   || goto error

../../../dacdif -a 1.e-6 ala.min.debug.out.save ala.min.debug.out
/bin/rm -f mdin mdinfo restrt
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)

toomany:
    echo " too many processors for this test, exiting"
    echo "============================================================"
    exit(0)








