#!/bin/sh

if [ -n "$TESTsander" ]; then
   sander=$TESTsander
else
   sander=../../../bin/sander
fi

cat <<EOF > mdin
Test of MD with Xray restraints
 &cntrl
  ntx = 5, irest = 1, ntpr = 1,  
  ntc = 2, ntf = 2, tol = 0.000001,
  cut = 8.0,
  nstlim = 10, dt = 0.002,
  temp0 = 297.0, ig = 12345,
  ntt = 3,  gamma_ln=5.0,
 /
 &xray
   spacegroup_name='P1',
   pdb_infile = 'SolvXtal.pdb',
   reflection_infile = '2wcu-sf.dat',
   atom_selection_mask = '!(@H=) & !(:WAT)',
   xray_weight = 1000.,
   fft_method = 0,
 /
EOF

$sander -O -i mdin -p 2wcu_uc.parm7 -c md1.x -o xray1_md.out 
/bin/rm mdin mdinfo restrt first.fmtz

../../dacdif xray1_md.out.save xray1_md.out










