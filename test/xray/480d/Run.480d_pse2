#!/bin/sh

sander="../../../bin/msander"

if [ ! -z "$DO_PARALLEL" ]; then
   sander=$sander.MPI
fi

cat > mdin.rism <<eof
  single-point 3D-RISM calculation using the sander interface
 &cntrl
    ntx=1, nstlim=10, irism=1, ntpr=1,
    tempi=0.0, ithermostat=0, dt=0.001, 
 /
 &rism
    periodic='pme',
    closure='kh','pse2',
    grdspc=0.499,0.499,0.478,
    mdiis_del=0.50, mdiis_nvec=10, tolerance=0.01,0.000000001,
    solvcut=9.0,
    verbose=1, npropagate=1,
    apply_rism_force=1,
    write_thermo=0,
 /
eof

output=480d.pse2.r3d
xvv=NaCl1M_pse2.xvv

$DO_PARALLEL $sander -O -i mdin.rism -o $output \
    -p 4amber_480d.prmtop -c 4amber_480d.rst7 -xvv $xvv \
    < /dev/null || { echo "  $0:  Program error"; exit 1; }

../../dacdif $output.save $output

/bin/rm -f mdin.rism restrt mdinfo 
exit 0

