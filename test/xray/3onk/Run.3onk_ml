#!/bin/sh

sander=/home/case/msander/bin/msander
if [ ! -z "$DO_PARALLEL" ]; then
   sander=$sander.MPI
fi

cat <<EOF > mdin
Test of MD with Xray restraints
 &cntrl
  imin=0, maxcyc=250,
  ntx = 1, irest = 0, ntpr = 5,  
  ntc = 2, ntf = 2, tol = 0.000001,
  cut = 10.0,
  nstlim = 0, dt = 0.001,
  ithermostat=1, therm_par=3., ig=827534,
  temp0 = 293.0, 
 /
 &ewald
  vdwmeth=1,
 /
 &xray
   spacegroup_name='P1',
   pdb_infile = 'final_structure_bf.pdb'
   reflection_infile = 'reflections-sf.dat',
   atom_selection_mask = ':*',
   xray_weight = 1.0,
   fft_method = 0,
   target='ml', 
   k_sol=0.35, b_sol=46.0,
 /
EOF

output=3onk_ml.o

$DO_PARALLEL $sander -O -i mdin -p 3onk.parm7 \
    -c 4amber_3onk.rst7 -o $output \
    < /dev/null || { echo "  $0:  Program error"; exit 1; }

../../dacdif $output.save $output

/bin/rm mdin mdinfo restrt

